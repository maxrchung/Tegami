<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StrokeAnimation"
        mc:Ignorable="d"
        Title="StrokeAnimation" ResizeMode="CanMinimize" HorizontalAlignment="Left" VerticalAlignment="Top" SizeToContent="WidthAndHeight">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:Commands.Import}" Executed="Import_Click"/>
        <CommandBinding Command="{x:Static local:Commands.PlayPause}" Executed="Player_PlayPause"/>
    </Window.CommandBindings>

    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" Width="1600" Height="786">
        <Menu HorizontalAlignment="Left" Height="20" VerticalAlignment="Bottom" Width="1600" Grid.ColumnSpan="2" Canvas.Left="0" Canvas.Top="0">
            <MenuItem Header="File">
                <MenuItem x:Name="New"  Header="New" Click="New_Click" />
                <MenuItem x:Name="Import"  Header="Import" Command="{x:Static local:Commands.Import}" />
                <MenuItem x:Name="Open" Header="Open" Click="Open_Click" />
                <MenuItem x:Name="Save" Header="Save" Click="Save_Click" />
            </MenuItem>
        </Menu>
        <MediaElement x:Name="Player" Height="720" VerticalAlignment="Top" Width="1280" MediaOpened="Player_MediaOpened" LoadedBehavior="Manual" UnloadedBehavior="Manual" Canvas.Top="25" Canvas.Left="10"/>
        <ProgressBar x:Name="Progress" Height="26" Canvas.Left="10" Canvas.Top="750" Width="1280" Maximum="1" Loaded="Progress_Load"/>
        <Label x:Name="CurrentTime" Content="00:00" Canvas.Left="1301" Canvas.Top="746" FontSize="18"/>
        <Label Content="/" Canvas.Left="1348" Canvas.Top="746" FontSize="18"/>
        <Label x:Name="TotalTime" Content="00:00" Canvas.Left="1359" Canvas.Top="746" FontSize="18"/>
    </Canvas>
</Window>
